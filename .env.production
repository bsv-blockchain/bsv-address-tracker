# Production Environment Variables for BSV Address Tracker
# Copy this file to .env and update with your actual values

# MongoDB Credentials - CHANGE THESE!
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-password-here

# SV Node Connection - REQUIRED
SVNODE_RPC_HOST=host.docker.internal
SVNODE_RPC_PORT=8332  # 8332 for mainnet, 18332 for testnet
SVNODE_RPC_USER=your-rpc-username
SVNODE_RPC_PASSWORD=your-rpc-password

# ZeroMQ Endpoints - REQUIRED
SVNODE_ZMQ_RAWTX=tcp://host.docker.internal:28332
SVNODE_ZMQ_HASHBLOCK=tcp://host.docker.internal:28333

# Network
BSV_NETWORK=mainnet  # or testnet

# API Configuration
API_PORT=3000

# Logging Levels
LOG_LEVEL=info  # debug, info, warn, error
ZMQ_VERBOSE_LOGGING=false
CONFIRMATION_TRACKER_VERBOSE_LOGGING=false
RPC_VERBOSE_LOGGING=false

# Processing
AUTO_ARCHIVE_AFTER=144  # Archive after 144 confirmations

# WhatsOnChain Integration (Optional)
WOC_RATE_LIMIT_MS=1000
MAX_HISTORY_PER_ADDRESS=500
WOC_VERBOSE_LOGGING=false

# API Authentication (Optional)
# Enable API key authentication for production security
REQUIRE_API_KEY=true
API_KEY=generate-a-secure-random-key-here

# Webhooks (Optional)
# Enable to send HTTP notifications on transaction changes
ENABLE_WEBHOOKS=true
WEBHOOK_BATCH_SIZE=100
WEBHOOK_PROCESSING_INTERVAL=5000
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=5
WEBHOOK_CLEANUP_DAYS=7
